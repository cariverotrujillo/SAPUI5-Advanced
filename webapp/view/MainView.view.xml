<mvc:View controllerName="logaligroup.logali.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content> 
            <HBox id="box">
                <Label id="employee" text="{i18n>labelemployee}" labelFor="inputempl" class="sapUiSmallMargin"></Label>
                <Input id="inputempl" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"></Input>

                <Label id="country" text="{i18n>labelcountry}" labelFor="slCountry" class="sapUiSmallMargin" visible="false"></Label>
                <Select id="slCountry" forceSelection="false" visible="false">
                    <items>
                        <core:Item id="Itemus" key="US" text="{i18n>countyUS}"></core:Item>
                        <core:Item id="ItemUK" key="UK" text="{i18n>countyUK}"></core:Item>
                        <core:Item id="ItemES" key="ES" text="{i18n>countyES}"></core:Item>
                    </items>
                </Select>
            </HBox>
        </content>
    </Page>
</mvc:View>
